{
  "openapi": "3.1.1",
  "info": {
    "title": "Action Definitions API",
    "description": "Automatically generated from Pydantic models for action definitions.",
    "version": "0.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {},
  "components": {
    "schemas": {
      "BaseActionDefinition": {
        "properties": {
          "type": {
            "title": "Type"
          },
          "requires_approval": {
            "type": "boolean",
            "title": "Requires Approval"
          }
        },
        "type": "object",
        "required": [
          "type",
          "requires_approval"
        ],
        "title": "BaseActionDefinition",
        "description": "The client facing model(s) which allow prefilling\nparameters. Used in the platforms config for defining\nthe allowed actions."
      },
      "BanActionDefinition": {
        "properties": {
          "type": {
            "ref": "#/$defs/DiscordActionType",
            "default": "ban"
          },
          "requires_approval": {
            "type": "boolean",
            "title": "Requires Approval"
          }
        },
        "type": "object",
        "required": [
          "requires_approval"
        ],
        "title": "BanActionDefinition",
        "$defs": {
          "DiscordActionType": {
            "enum": [
              "ban",
              "mute"
            ],
            "title": "DiscordActionType",
            "type": "string"
          }
        }
      },
      "MuteActionDefinition": {
        "properties": {
          "type": {
            "ref": "#/$defs/DiscordActionType",
            "default": "mute"
          },
          "requires_approval": {
            "type": "boolean",
            "title": "Requires Approval"
          },
          "duration": {
            "anyOf": [
              {
                "type": "integer",
                "minimum": 0.0
              },
              {
                "type": "null"
              }
            ],
            "title": "Duration",
            "description": "Duration in milliseconds to mute the user."
          }
        },
        "type": "object",
        "required": [
          "requires_approval"
        ],
        "title": "MuteActionDefinition",
        "$defs": {
          "DiscordActionType": {
            "enum": [
              "ban",
              "mute"
            ],
            "title": "DiscordActionType",
            "type": "string"
          }
        }
      }
    }
  }
}